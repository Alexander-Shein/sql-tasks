--deleteOrderById

DROP PROC DeleteOrderById;


CREATE PROC DeleteOrderById
@orderID INT
AS 
BEGIN TRY
BEGIN TRAN;
	BEGIN 
	DELETE
	FROM [dbo].[Order Details]
		WHERE ( [Order Details].[OrderID] = @orderID)
	DELETE
	FROM [dbo].[Orders]
		WHERE ( [Orders].[OrderID] = @orderID);
	END
COMMIT TRAN;
END TRY
BEGIN CATCH
	ROLLBACK;
END CATCH;	
	
EXEC DeleteOrderById @orderID = 10250;
